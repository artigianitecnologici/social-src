  noetic_base:
    image: marrtino:noetic_base
    build:
      context: $MARRTINO_APPS_HOME2/docker
      dockerfile: Dockerfile.noetic_base
    container_name: noetic_base
    dns: 8.8.8.8
    network_mode: "host"
    tty: true
    environment:
    - DISPLAY=$DISPLAY
    - ROS_IP=$ROS_IP
    - ROBOT_TYPE=$ROBOT_TYPE
    volumes:
    - $MARRTINO_APPS_HOME2:/home/robot/src/marrtino_apps
    - $HOME/log:/home/robot/log

